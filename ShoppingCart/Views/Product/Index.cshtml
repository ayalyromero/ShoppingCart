@model IEnumerable<ShoppingCart.Models.Product>

@{
    ViewData["Title"] = "Products";
    int i = 0;
}

<input id="urlProducts" type="hidden" value="@Url.Action("GetProductsInBasket", "Basket")"/>

<h1>Products</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                €@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <input id="quantity_@i" type="number" min="1" value="1" style="width:4em"/>

                <button type="button" class="add-product" data-index="@i" data-product-id="@item.Id" data-url="@Url.Action("AddProducts","Basket")">Add</button>

            </td>
        </tr>
    i++;
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/js/App/ProductIndex.js?v=@(new Random().Next(1000))"></script>